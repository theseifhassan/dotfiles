// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "preview_tabs": {
    "enabled": false
  },
  "soft_wrap": "none",
  "show_edit_predictions": true,
  "tabs": {
    "file_icons": false,
    "git_status": false
  },
  "zoomed_padding": true,
  "status_bar": {
    "cursor_position_button": true
  },
  "rounded_selection": false,
  "jsx_tag_auto_close": {
    "enabled": false
  },
  "use_auto_surround": false,
  "use_autoclose": false,
  "notification_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "title_bar": {
    "show_menus": false,
    "show_branch_icon": true,
    "show_sign_in": true,
    "show_user_picture": true,
    "show_onboarding_banner": false,
    "show_project_items": true,
    "show_branch_name": true
  },
  "debugger": {
    "button": false
  },
  "search": {
    "button": false
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": false
  },
  "indent_guides": {
    "enabled": true,
    "background_coloring": "disabled",
    "active_line_width": 1,
    "line_width": 1
  },
  "toolbar": {
    "agent_review": false,
    "selections_menu": false,
    "quick_actions": false,
    "breadcrumbs": true
  },
  "agent": {
    "notify_when_agent_waiting": "never",
    "dock": "left",
    "model_parameters": []
  },
  "project_panel": {
    "hide_gitignore": false,
    "dock": "right"
  },
  "terminal": {
    "toolbar": {
      "breadcrumbs": true
    },
    "button": true,
    "copy_on_select": true
  },
  "scrollbar": {
    "axes": {
      "vertical": false,
      "horizontal": false
    },
    "show": "never"
  },
  "gutter": {
    "folds": true,
    "breakpoints": false,
    "runnables": false
  },
  "relative_line_numbers": true,
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "vim_mode": true,
  "ui_font_family": "Berkeley Mono",
  "buffer_font_family": "Berkeley Mono",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Vercel Dark"
  },
  "wrap_guides": [80],
  "max_tabs": 1,
  "languages": {
    "TSX": { "use_autoclose": false, "use_on_type_format": false },
    "TypeScript": { "use_autoclose": false, "use_on_type_format": false },
    "JSON": { "use_autoclose": false, "use_on_type_format": false },
    "JSONC": { "use_autoclose": false, "use_on_type_format": false }
  },
  "agent_servers": {
    "OpenCode": {
      "command": "opencode",
      "args": ["acp"]
    }
  }
}
