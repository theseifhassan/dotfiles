{
    "$schema": "https://opencode.ai/config.json",
    "autoupdate": true,
    "mcp": {
        "context7": {
            "type": "remote",
            "url": "https://mcp.context7.com/mcp",
            "headers": {
                "CONTEXT7_API_KEY": "API_TOKEN"
            },
            "enabled": true
        },
        "graphite": {
            "type": "local",
            "command": [
                "gt",
                "mcp"
            ],
        },
        "github": {
            "type": "remote",
            "url": "https://api.githubcopilot.com/mcp",
            "headers": {
                "Authorization": "Bearer GITHUB_PAT"
            },
            "enabled": true
        },
        "next-devtools": {
            "type": "local",
            "command": [
                "bunx",
                "-y",
                "next-devtools-mcp@latest"
            ],
        }
    }
}
