{
    "$schema": "https://opencode.ai/config.json",
    "autoupdate": true,
    "mcp": {
        "graphite": {
            "type": "local",
            "command": [
                "gt",
                "mcp"
            ],
            "enabled": true
        },
        "next-devtools": {
            "type": "local",
            "command": [
                "bunx",
                "-y",
                "next-devtools-mcp@latest"
            ],
            "enabled": true
        },
        "linear": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "mcp-remote",
                "https://mcp.linear.app/mcp"
            ],
            "enabled": true
        }
    }
}
