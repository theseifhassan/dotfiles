Host *
    AddKeysToAgent yes
    IdentitiesOnly yes
    StrictHostKeyChecking accept-new
    UpdateHostKeys yes
    HostKeyAlgorithms ssh-ed25519,rsa-sha2-512,rsa-sha2-256
    ConnectTimeout 10
    ServerAliveInterval 60
    ServerAliveCountMax 3

# Personal GitHub
Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/personal.github

# Work GitHub (use: git clone git@work.github.com:org/repo.git)
Host work.github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/work.github
