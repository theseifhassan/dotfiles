# 1Password SSH Agent
# Keys stored in 1Password vault, synced across devices
# Key-to-host mapping configured in ~/.config/1Password/ssh/agent.toml
Host *
    IdentityAgent "~/.1password/agent.sock"

# Personal GitHub (uses key mapped in 1Password agent.toml)
Host github.com
    HostName github.com
    User git

# Work GitHub (use: git clone git@work.github:org/repo.git)
Host work.github
    HostName github.com
    User git
